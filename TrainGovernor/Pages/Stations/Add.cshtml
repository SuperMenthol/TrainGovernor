@page
@model TrainGovernor.Pages.Stations.AddModel
@section Scripts{
    <script type="text/javascript">var station = @Html.Raw(Json.Serialize(Model.TrainStationDto));</script>
    <script type="text/javascript">var cities = @Html.Raw(Json.Serialize(Model.Cities));</script>
    <script type="module" src="~/js/Stations/Create.js" ></script>
}
@section Styles{
    <link href="~/css/Shared.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Station.css" rel="stylesheet" type="text/css" />
}

<div class="out">
    <div class="main-container">
        <h1 class="h1-header">Add new station</h1>
        <div class="input-box">
            <h1 class="h1-style">Name</h1>
            <label for="name-input">Station name</label>
            <input id="name-input" type="text" class="form-control" />
            @*to do: station code*@
        </div>
        <div class="separator-div-md"></div>
        <div class="input-box">
            <h1 class="h1-style">Address data</h1>
            <label for="city-select">Select city:</label>
            <select id="city-select" class="form-select">
                <option value=0>Choose a city</option>
                @foreach (var city in Model.Cities)
                {
                    <option value=@city.Id>@city.Name</option>
                }
            </select>
            <div class="separator-div-sm"></div>
            <label for="zipcode-input">Zip code:</label>
            <input id="zipcode-input" type="text" class="form-control" />
            <div class="separator-div-sm"></div>
            <label for="street1-input">Street name:</label>
            <input id="street1-input" type="text" class="form-control" />
            <div class="separator-div-sm"></div>
            <label for="street2-input">Street number:</label>
            <input id="street2-input" type="text" class="form-control" />
        </div>
        <div class="separator-div-lg"></div>
        <div class="button-container">
            <button id="save-btn" class="btn btn-lg btn-block btn-success" disabled>Add</button>
            <div class="separator-div-sm"></div>
            <button id="cancel-btn" class="btn btn-lg btn-block btn-danger" onclick="location.href='/Stations/Index'">Go back</button>
        </div>
        <div class="separator-div-md"></div>
    </div>
</div>