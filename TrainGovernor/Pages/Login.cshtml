@page
@model LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="app-container">
            <p class="appname-header">@Model.APPLICATION_NAME</p>
        </div>
        <div class="form-bg">
            <div class="separator-div-md"></div>
            <form class="login-form" method="post">
                <label class="input-label" for="loginInput">Login:</label>
                <input class="input-bg" id="loginInput" type="text" maxlength="50" placeholder="Type login here..." asp-for="UserName" required />
                <div class="separator-div-md"></div>
                <label class="input-label" for="passInput">Password:</label>
                <input class="input-bg" id="passInput" type="password" maxlength="20" placeholder="Type password here..." asp-for="Password" required />
                <div class="separator-div-md"></div>
                <button type="submit" class="login-btn">Login</button>
            </form>
        </div>
    </div>
</body>
