@page
@model TrainGovernor.Pages.Cities.CreateModel
@section scripts{
    <script type="module" src="~/js/Cities/Create.js" ></script>
}
@section Styles{
    <link href="~/css~/css/Shared.css" rel="stylesheet" type="text/css" />
    <link href="~/css/City.css" rel="stylesheet" type="text/css" />
}

<div id="main-container" class="main-container">
    <h1 class="h1-style">Add new city</h1>
    <div id="name-container" class="create-container">
        <h1 class="h1-style">Name</h1>
        <input type="text" id="name-input" minlength=2 class="form-control input-box" />
        <label for="name-input">City name cannot be shorter than 2 letters.</label>
    </div>
    <div class="separator-div-lg"></div>
    <div id="zipcode-container" class="create-container">
        <h1 class="h1-style">Zip code (optional)</h1>
        <h2 class="h2-style">This zip code will be used as default when creating new stations, but it can be overwritten.</h2>
        <input type="text" id="postcode-input" class="form-control input-box" />
    </div>
    <div class="separator-div-lg"></div>
    <button id="save-button" class="btn btn-success" disabled>Add</button>
    <div class="separator-div-sm"></div>
    <button id="cancel-button" class="btn btn-danger" onclick="location.href='/Cities/Index'">Go back</button>
</div>